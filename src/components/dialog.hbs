<div class="dialog">
    <div class="dialog__header">
        <div class="dialog__header__profile">
            <div class="dialog__header__profile__img"></div>
            <div class="dialog__header__profile__name">{{data.name}}</div>
        </div>

        <div class="dialog__header__actions">
            <img src="/static/img/dialogsPage/move-vertical.svg" alt="Действия">

            <div class="dialog__header__actions__dropDownList">
                <div class="dialog__header__actions__dropDownList__addUser">
                    <img src="/static/img/dialogsPage/addUserButton.svg" alt="Добавить пользователя">
                    <p>Добавить пользователя</p>
                </div>

                <div class="dialog__header__actions__dropDownList__removeUser">
                    <img src="/static/img/dialogsPage/removeUserButton.svg" alt="Удалить пользователя">
                    <p>Удалить пользователя</p>
                </div>
            </div>
        </div>
    </div>

    <div class="dialog__content">
        {{#each data.content}}
            <p class="dialog__content__date">{{this.date}}</p>
            {{#each this.messages}}
                {{#if this.you}}
                    <div class="dialog__content__ownMessage">
                        {{#if this.type}}
                            <p class="dialog__content__ownMessage__text">{{this.text}}
                                <span class="dialog__content__ownMessage__empty"></span>
                                <span class="dialog__content__ownMessage__time">
                                    {{#if this.checked}}
                                        <img src="/static/img/dialogsPage/checkedMessage.svg" alt="Прочитанное сообщение">
                                        {{else}}
                                        <img src="/static/img/dialogsPage/uncheckedMessage.svg" alt="Непрочитанное сообщение">
                                    {{/if}}
                                    {{this.time}}</span>
                            </p>
                        {{else}}
                            <div class="dialog__content__ownMessage__imgContainer">
                                <img src='{{this.text}}'>
                                <span class="dialog__content__ownMessage__time">
                                    {{#if this.checked}}
                                        <img src="/static/img/dialogsPage/checkedMessage.svg" alt="Прочитанное сообщение">
                                        {{else}}
                                        <img src="/static/img/dialogsPage/uncheckedMessage.svg" alt="Непрочитанное сообщение">
                                    {{/if}}
                                    {{this.time}}
                                </span>
                            </div>
                        {{/if}}
                    </div>
                {{else}}
                    <div class="dialog__content__otherMessage">
                        {{#if this.type}}
                            <p class="dialog__content__otherMessage__text">{{this.text}}
                            <span class="dialog__content__otherMessage__time">{{this.time}}</span>
                            </sp>
                            {{else}}
                            <div class="dialog__content__otherMessage__imgContainer">
                                <img src='{{this.text}}' alt="Картинка чата">
                                <span class="dialog__content__otherMessage__time">{{this.time}}</span>
                            </div>
                        {{/if}}
                        <span class="dialog__content__other__time"></span>
                    </div>
                {{/if}}
            {{/each}}
        {{/each}}
    </div>

    <div class="dialog__messageSend">
        <div class="dialog__messageSend__dropDownListContainer">
            <img class="dialog__messageSend__dropDownListContainer__files" src="/static/img/dialogsPage/clip.svg" alt="Прикрепить файл">
            <div class="dialog__messageSend__dropDownListContainer__dropDownList">
                <div class="dialog__messageSend__dropDownListContainer__dropDownList__photoVideo">
                    <img src="/static/img/dialogsPage/photoVideo.svg" alt="Прикрепить фото/видео">
                    <p>Фото или Видео</p>
                </div>

                <div class="dialog__messageSend__dropDownListContainer__dropDownList__file">
                    <img src="/static/img/dialogsPage/file.svg" alt="Прикрепить файйл">
                    <p>Файл</p>
                </div>

                <div class="dialog__messageSend__dropDownListContainer__dropDownList__location">
                    <img src="/static/img/dialogsPage/location.svg" alt="Прикрепить локацию">
                    <p>Локация</p>
                </div>
            </div>
        </div>
        <input type="text" placeholder="Сообщение" name="message">
        <img class="dialog__messageSend__buttonSend" src="/static/img/dialogsPage/buttonSend.svg" alt="Кнопка отправки">
    </div>

    {{> dialogPagePopup data = addDeleteUser.add}}
    {{> dialogPagePopup data = addDeleteUser.delete}}
</div>
